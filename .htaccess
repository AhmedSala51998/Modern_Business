# =====================================
# Modern Business - Clean URL System
# =====================================

RewriteEngine On

# لو الموقع داخل فولدر في اللوكال (مثلاً /modernbusiness/)
RewriteBase /

# -------------------------------------
# 1️⃣ اخفاء index.html من الرابط
# -------------------------------------
RewriteCond %{THE_REQUEST} \s/+(.*/)?index\.html[\s?] [NC]
RewriteRule ^(.*/)?index\.html$ /$1 [R=301,L]

# -------------------------------------
# 2️⃣ تحويل أي رابط بدون .html لملف .html الحقيقي
# مثال: /about -> about.html
# -------------------------------------
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]

# -------------------------------------
# 3️⃣ لو حد كتب .html نحذفه من الرابط
# مثال: /about.html -> /about
# -------------------------------------
RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]
RewriteRule ^ %1 [R=301,L]

# -------------------------------------
# 4️⃣ الصفحة الرئيسية
# -------------------------------------
DirectoryIndex index.html

# -------------------------------------
# 5️⃣ صفحة الخطأ
# -------------------------------------
ErrorDocument 404 /404.html